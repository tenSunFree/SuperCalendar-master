<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="5dp"
                android:color="#FF8EFF"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="#FFF"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="3dp"
                android:color="#FF8EFF"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</layer-list>